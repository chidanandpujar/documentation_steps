root@masterhost:~/ansible_review_comments/ansible-junos-stdlib# git config --global user.email "chidanandpujar@gmail.com"

root@masterhost:~/ansible_review_comments/ansible-junos-stdlib# git config --global user.name "chidanandpujar"

